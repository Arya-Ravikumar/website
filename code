let posts = [...POSTS];
let currentFilter = 'all';

const catColors = { 'Community':'tag-moss','Healthcare':'tag-clay','HOSA':'tag-blue','STEM':'tag-gold','Robotics':'tag-gold','Fundraising':'tag-clay','Reflection':'tag-moss','Other':'tag-blue' };
const catTextColors = { 'tag-moss':'var(--moss)','tag-clay':'var(--clay)','tag-blue':'#3870a0','tag-gold':'var(--gold)' };
const visGradients = { 'bcv-1':'linear-gradient(135deg,#d8ecda,#b8d8bc)','bcv-2':'linear-gradient(135deg,#f5e8d5,#e8d0b0)','bcv-3':'linear-gradient(135deg,#d5e8f5,#b0ccdf)','bcv-4':'linear-gradient(135deg,#ecdfd5,#d8c4b4)','bcv-5':'linear-gradient(135deg,#e8e4d8,#d4cdb8)','bcv-6':'linear-gradient(135deg,#f0ead8,#e0d4b8)','bcv-7':'linear-gradient(135deg,#d8f0e8,#b0d8c4)' };

function renderBlogGrid() {
  const grid = document.getElementById('blog-grid');
  const empty = document.getElementById('blog-empty');
  const featured = document.getElementById('featured-post');
  const featuredPost = posts.find(p => p.featured);
  if (featuredPost) {
    featured.style.display = (currentFilter === 'all' || featuredPost.cat === currentFilter) ? 'grid' : 'none';
  }
  const filtered = currentFilter === 'all' ? posts.filter(p=>!p.featured) : posts.filter(p=>p.cat===currentFilter&&!p.featured);
  grid.innerHTML = '';
  if (!filtered.length) { empty.style.display='block'; return; }
  empty.style.display = 'none';
  filtered.forEach(post => {
    const cc = catColors[post.cat]||'tag-moss';
    const tc = catTextColors[cc]||'var(--moss)';
    const card = document.createElement('div');
    card.className = 'blog-card';
    card.innerHTML = `<div class="bc-visual ${post.vis}">${post.emoji}</div><div class="bc-body"><div class="bc-tag" style="color:${tc}">${post.cat}</div><div class="bc-title">${post.title}</div><div class="bc-excerpt">${post.excerpt}</div><div class="bc-meta"><span>${post.date}</span><span>${post.time}</span></div></div>`;
    card.onclick = () => openReadModal(post.id);
    grid.appendChild(card);
  });
}

function filterPosts(cat, btn) {
  currentFilter = cat;
  document.querySelectorAll('.filter-btn').forEach(b=>b.classList.remove('active'));
  btn.classList.add('active');
  renderBlogGrid();
}

function openWriteModal() { document.getElementById('write-modal').classList.add('open'); }
function closeWriteModal() { document.getElementById('write-modal').classList.remove('open'); }

const visOptions = ['bcv-1','bcv-2','bcv-3','bcv-4','bcv-5','bcv-6','bcv-7'];
const emojiMap = { 'Community':'üåø','Healthcare':'üíä','HOSA':'üî¨','STEM':'üìê','Robotics':'ü§ñ','Fundraising':'‚úâÔ∏è','Reflection':'‚ú®','Other':'üìñ' };
let nextId = POSTS.length;

function publishPost() {
  const title = document.getElementById('wm-title').value.trim();
  const cat = document.getElementById('wm-cat').value;
  const excerpt = document.getElementById('wm-excerpt').value.trim();
  const body = document.getElementById('wm-body').value.trim();
  const time = document.getElementById('wm-time').value.trim()||'3 min read';
  if (!title||!excerpt||!body) { alert('Please fill in title, excerpt, and content.'); return; }
  const date = new Date().toLocaleString('default',{month:'long',year:'numeric'});
  posts.unshift({ id:nextId++, title, cat, excerpt, body, time, date, emoji:emojiMap[cat]||'üìñ', vis:visOptions[nextId%visOptions.length], featured:false });
  renderBlogGrid();
  closeWriteModal();
  ['wm-title','wm-excerpt','wm-body','wm-time'].forEach(id=>document.getElementById(id).value='');
  document.getElementById('wm-cat').selectedIndex=0;
}

function openReadModal(id) {
  const post = posts.find(p=>p.id===id);
  if (!post) return;
  const cc = catColors[post.cat]||'tag-moss';
  document.getElementById('rm-visual').style.background = visGradients[post.vis]||visGradients['bcv-1'];
  document.getElementById('rm-visual').textContent = post.emoji;
  document.getElementById('rm-tag').textContent = post.cat;
  document.getElementById('rm-tag').className = `service-tag ${cc}`;
  document.getElementById('rm-meta').textContent = `${post.date} ¬∑ ${post.time}`;
  document.getElementById('rm-title').textContent = post.title;
  document.getElementById('rm-body').innerHTML = post.body.split('\n\n').map(p=>`<p>${p}</p>`).join('');
  document.getElementById('read-modal').classList.add('open');
}
function closeReadModal() { document.getElementById('read-modal').classList.remove('open'); }

['write-modal','read-modal'].forEach(id=>{
  document.getElementById(id).addEventListener('click',function(e){ if(e.target===this)this.classList.remove('open'); });
});

function switchTab(name,btn) {
  document.querySelectorAll('.cv-pane').forEach(p=>p.classList.remove('active'));
  document.querySelectorAll('.cv-tab').forEach(b=>b.classList.remove('active'));
  document.getElementById('pane-'+name).classList.add('active');
  btn.classList.add('active');
}

function sendMessage() {
  const name=document.getElementById('cf-name').value.trim();
  const email=document.getElementById('cf-email').value.trim();
  const subject=document.getElementById('cf-subject').value.trim();
  const msg=document.getElementById('cf-msg').value.trim();
  if(!name||!email||!msg){alert('Please fill in all fields.');return;}
  window.location.href=`mailto:aryravikumar13@outlook.com?subject=${encodeURIComponent(subject||'Message from '+name)}&body=${encodeURIComponent(msg+'\n\nFrom: '+name+'\nReply to: '+email)}`;
  document.getElementById('cf-success').style.display='block';
}

const observer = new IntersectionObserver(entries=>{
  entries.forEach(e=>{ if(e.isIntersecting){e.target.classList.add('visible');observer.unobserve(e.target);} });
},{threshold:.08});
document.querySelectorAll('.reveal').forEach(el=>observer.observe(el));

renderBlogGrid();
</script>
